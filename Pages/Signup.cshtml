@page
@model TeaShop.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container py-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Sign Up</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Signup.Username" class="form-label">Username</label>
            <input asp-for="Signup.Username" class="form-control" required />
            <span asp-validation-for="Signup.Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Signup.Email" class="form-label">Email address</label>
            <input asp-for="Signup.Email" class="form-control" type="email" required />
            <span asp-validation-for="Signup.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Signup.Password" class="form-label">Password</label>
            <input asp-for="Signup.Password" class="form-control" type="password" required />
            <span asp-validation-for="Signup.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Signup.ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="Signup.ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="Signup.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        <div class="mt-3 text-center">
            <span>Already have an account? <a asp-page="/Login">Login</a></span>
        </div>
    </form>
</div> 